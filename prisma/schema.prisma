// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model usuario{
  id Int @id @default(autoincrement())
  nome String
  senha String
  email String @unique
  foto String?
  privilegios Boolean  
}

model artista{
  id Int @id @default(autoincrement())
  nome String
  foto String?
  streams Int
}

model musicas{
  id Int @id @default(autoincrement())
  nome String
  genero String?
  album String?
}
